.customer-service {
  position: fixed;
  right: 20rpx;
  bottom: 120rpx;
  z-index: 999;
}

.service-icon {
  width: 100rpx;
  height: 100rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.service-icon image {
  width: 60rpx;
  height: 60rpx;
}

.chat-container {
  position: fixed;
  right: 20rpx;
  bottom: 240rpx;
  width: 600rpx;
  height: 800rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.chat-header {
  padding: 20rpx;
  background: #ff6b6b;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chat-body {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.message.user {
  align-items: flex-end;
}

.message.service {
  align-items: flex-start;
}

.message-content {
  max-width: 80%;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  word-break: break-all;
}

.message.user .message-content {
  background: #ff6b6b;
  color: #fff;
}

.message.service .message-content {
  background: #f5f5f5;
  color: #333;
}

.chat-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.chat-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  border-radius: 36rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
}

.voice-call-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #ff6b6b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-call-btn image {
  width: 40rpx;
  height: 40rpx;
}

.calling-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calling-box {
  width: 400rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.calling-status {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.end-call-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #ff6b6b;
  display: flex;
  align-items: center;
  justify-content: center;
}
