.making-container {
  min-height: 100vh;
  background-color: #faf6f1;
  padding-bottom: 40rpx;
  position: relative;
}

/* 顶部装饰图案 */
.decorative-pattern {
  height: 200rpx;
  background: linear-gradient(135deg, #c8a675 0%, #8b6b4d 100%);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  border-bottom-left-radius: 40% 20%;
  border-bottom-right-radius: 40% 20%;
  opacity: 0.1;
}

/* 顶部标题区域 */
.header {
  padding: 60rpx 40rpx;
  position: relative;
  z-index: 1;
}

.title-container {
  text-align: center;
  margin-bottom: 30rpx;
}

.main-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  letter-spacing: 4rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #8b6b4d;
  letter-spacing: 2rpx;
}

/* 装饰分割线 */
.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.divider-line {
  width: 100rpx;
  height: 2rpx;
  background: linear-gradient(to right, transparent, #c8a675, transparent);
}

.divider-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #c8a675;
  border-radius: 50%;
  margin: 0 20rpx;
}

/* 工艺流程时间轴 */
.process-timeline {
  padding: 20rpx 40rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-line {
  position: absolute;
  top: 50%;
  left: 60rpx;
  right: 60rpx;
  height: 2rpx;
  background: linear-gradient(to right, #c8a675 0%, #8b6b4d 100%);
  transform: translateY(-50%);
}

.timeline-nodes {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
}

.timeline-node {
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border: 2rpx solid #c8a675;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #c8a675;
  position: relative;
  transition: all 0.3s ease;
  z-index: 1;
}

.timeline-node.active {
  background-color: #c8a675;
  color: #fff;
  transform: scale(1.2);
}

/* 步骤展示区 */
.steps-swiper {
  height: 800rpx;
  padding: 0 30rpx;
}

.step-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx;
  transform: scale(0.95);
  transition: all 0.3s ease;
}

.step-card.active {
  transform: scale(1);
}

.step-image-container {
  position: relative;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.step-image {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  object-fit: contain;
  background-color: #f8f8f8;
}

.step-image.active {
  transform: translateY(-10rpx);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.step-number {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.step-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.step-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.step-progress {
  flex: 1;
  margin-left: 30rpx;
  max-width: 200rpx;
}

.progress-bar {
  height: 6rpx;
  background-color: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(to right, #c8a675, #8b6b4d);
  transition: width 0.3s ease;
}

.step-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin: 20rpx 0;
}

/* 操作按钮 */
.step-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.action-btn.prev {
  color: #666;
  background-color: #f5f5f5;
}

.action-btn.next {
  color: #fff;
  background: linear-gradient(to right, #c8a675, #8b6b4d);
}

.btn-icon {
  margin: 0 10rpx;
}

.action-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 底部提示 */
.footer-tips {
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.tip-item {
  display: flex;
  align-items: center;
  margin: 10rpx 20rpx;
}

.tip-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}
 