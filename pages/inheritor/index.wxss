.inheritor-container {
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  padding: 40rpx 30rpx;
  background-color: #fff;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  padding: 30rpx;
}

.inheritor-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.inheritor-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.inheritor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  border: 4rpx solid #c8a675;
}

.inheritor-info {
  flex: 1;
}

.inheritor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.inheritor-title {
  font-size: 26rpx;
  color: #c8a675;
}

.inheritor-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.achievement {
  display: block;
  margin: 20rpx 0 10rpx;
  font-weight: bold;
  color: #333;
}

.achievement-item {
  margin: 10rpx 0;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}

.philosophy-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #c8a675;
  padding-left: 20rpx;
}

.philosophy-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.philosophy-item {
  margin: 10rpx 0;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}
