/* 创作页面样式 */
.create-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部操作栏 */
.top-bar {
  height: 88rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.top-bar .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

/* 创作区域 */
.creation-area {
  flex: 1;
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

/* 左侧工具栏 */
.tools-panel {
  width: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.1);
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tool-item:active {
  transform: scale(0.95);
  background: rgba(139, 69, 19, 0.1);
}

.tool-item text {
  font-size: 28rpx;
  color: #8b4513;
  font-weight: 500;
}

/* 中央画布区域 */
.canvas-area {
  flex: 1;
  background: #ffffff;
  border-radius: 16rpx;
  position: relative;
}

.main-canvas {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 右侧AI助手面板 */
.ai-panel {
  width: 300rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}

.ai-header {
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.ai-header text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.ai-input-area {
  padding: 20rpx;
}

.ai-input-area textarea {
  width: 100%;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.generate-btn {
  width: 100%;
  height: 72rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-suggestions {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.suggestion-title {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

/* 底部操作栏 */
.bottom-bar {
  height: 120rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  width: 180rpx;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn {
  background: #f0f0f0;
  color: #333333;
}

.share-btn {
  background: #07c160;
  color: #ffffff;
}
