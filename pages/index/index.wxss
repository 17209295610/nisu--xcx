/* 容器样式 */
.container {
  min-height: 100vh;
  background-color: #ffffff;
}

/* 顶部安全区域 */
.safe-area {
  width: 100%;
  background-color: #ffffff;
}

/* 搜索区域样式 */
.search-section {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  gap: 10rpx;
}

.search-box input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.user-avatar {
  position: relative;
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.message-dot {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
}

/* 轮播图样式 */
.swiper-section {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: #ffffff;
}

.banner-swiper {
  width: 100%;
  height: calc(100vw * 0.5625); /* 16:9比例 */
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 40rpx 30rpx 20rpx;
  font-size: 32rpx;
  color: #ffffff;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  font-weight: 500;
}

/* 自定义指示点样式 */
.wx-swiper-dots {
  position: relative;
  left: unset !important;
  right: 0;
  bottom: 20rpx !important;
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: -10rpx;
}

.wx-swiper-dot {
  width: 8rpx !important;
  height: 8rpx !important;
  margin: 0 8rpx !important;
}

.wx-swiper-dot-active {
  width: 16rpx !important;
}

/* 艺术家推荐样式 */
.artist-section {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #8b4513;
  border-radius: 3rpx;
}

.more-text {
  font-size: 24rpx;
  color: #666;
}

.artist-scroll {
  width: 100%;
  white-space: nowrap;
}

.artist-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.artist-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

.artist-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 10rpx;
}

.artist-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.artist-title {
  font-size: 22rpx;
  color: #666;
}

/* 精品推荐样式 */
.featured-section {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.featured-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.featured-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.featured-image {
  width: 100%;
  height: 300rpx;
}

.featured-info {
  padding: 16rpx;
}

.featured-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.featured-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.featured-price {
  font-size: 32rpx;
  color: #8b4513;
  font-weight: bold;
}

/* 文化传承样式 */
.culture-section {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.culture-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.culture-image {
  width: 100%;
  height: 300rpx;
}

.culture-info {
  padding: 20rpx;
}

.culture-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.culture-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 创作灵感样式 */
.inspiration-section {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.inspiration-scroll {
  width: 100%;
  white-space: nowrap;
}

.inspiration-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.inspiration-item {
  width: 240rpx;
  margin-right: 20rpx;
}

.inspiration-image {
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.inspiration-title {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  white-space: normal;
}
