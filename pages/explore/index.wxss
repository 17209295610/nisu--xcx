.explore-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.explore-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.explore-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.explore-cover {
  width: 100%;
  height: 300rpx;
}

.explore-content {
  padding: 20rpx;
}

.explore-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.explore-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  line-height: 1.5;
}
