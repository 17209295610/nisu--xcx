<view class="explore-container">
  <loading wx:if="{{loading}}" />
  
  <view class="explore-list">
    <view class="explore-item" wx:for="{{exploreList}}" wx:key="id">
      <image class="explore-cover" src="{{item.cover}}" mode="aspectFill" />
      <view class="explore-content">
        <text class="explore-title">{{item.title}}</text>
        <text class="explore-desc">{{item.desc}}</text>
      </view>
    </view>
  </view>
</view> 