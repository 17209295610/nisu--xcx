.product-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.categories {
  white-space: nowrap;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.category-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

.category-item.active {
  color: #fff;
  background: #8b4513;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.product-cover {
  width: 100%;
  height: 400rpx;
}

.product-content {
  padding: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: bold;
}

.buy-btn {
  background: #8b4513;
  color: #fff;
  border-radius: 30rpx;
}
