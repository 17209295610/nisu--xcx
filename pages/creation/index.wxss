.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  padding: 20rpx;
}

.steps {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.step-list {
  display: flex;
  flex-direction: column;
}

.step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.step.active {
  opacity: 1;
}

.step.completed {
  opacity: 0.8;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: #8b4513;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.content {
  flex: 1;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.buttons {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.prev-btn,
.next-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.prev-btn {
  background: #f5f5f5;
  color: #666;
}

.next-btn {
  background: #8b4513;
  color: #fff;
}

text {
  font-size: 32rpx;
  color: #333;
}

.creation-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* AI提示样式 */
.ai-tips {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #c4753c;
  margin-bottom: 10rpx;
}

.tips-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 开始创作区域 */
.start-section {
  text-align: center;
  padding: 40rpx 0;
}

.start-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.start-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.start-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #c4753c;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* 步骤导航 */
.step-nav {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.step-item::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 40rpx;
  background: #eee;
}

.step-item:last-child::after {
  display: none;
}

.step-name {
  font-size: 24rpx;
  color: #999;
}

.step-item.active .step-name {
  color: #c4753c;
}

/* 步骤详情 */
.step-detail {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.step-image {
  width: 100%;
  height: 400rpx;
}

.step-info {
  padding: 20rpx;
}

.step-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.step-tips {
  font-size: 28rpx;
  color: #666;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tips-label {
  color: #c4753c;
  font-weight: bold;
}

/* 工具展示 */
.tools-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tools-scroll {
  white-space: nowrap;
}

.tool-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  text-align: center;
}

.tool-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.tool-name {
  font-size: 28rpx;
  color: #333;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background: #c4753c;
  color: #fff;
}
