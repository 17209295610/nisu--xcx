{
  "pages": [
    "pages/index/index",
    "pages/explore/index",
    "pages/creation/index",
    "pages/product/index"
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#4A3428",
    "navigationBarTitleText": "泥遇AI：智能泥塑创想馆",
    "navigationBarTextStyle": "white",
    "enablePullDownRefresh": true
  },
  "tabBar": {
    "custom": false,
    "color": "#999999",
    "selectedColor": "#8B4513",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "/assets/icons/default-home.png",
        "selectedIconPath": "/assets/icons/default-home-active.png"
      },
      {
        "pagePath": "pages/explore/index",
        "text": "探索",
        "iconPath": "/assets/icons/default-profile.png",
        "selectedIconPath": "/assets/icons/default-profile-active.png"
      },
      {
        "pagePath": "pages/creation/index",
        "text": "创作",
        "iconPath": "/assets/icons/default-custom.png",
        "selectedIconPath": "/assets/icons/default-custom-active.png"
      },
      {
        "pagePath": "pages/product/index",
        "text": "产品",
        "iconPath": "/assets/icons/default-gallery.png",
        "selectedIconPath": "/assets/icons/default-gallery-active.png"
      }
    ]
  },
  "networkTimeout": {
    "request": 10000,
    "connectSocket": 10000,
    "uploadFile": 10000,
    "downloadFile": 10000
  },
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于展示附近的泥塑文化场所"
    }
  },
  "usingComponents": {
    "loading": "/components/common/Loading/index"
  },
  "style": "v2",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents"
}
